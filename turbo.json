{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["./dist/**"],
      "dependsOn": ["^build"]
    },
    "postbuild-publish": {
      "dependsOn": ["build", "^postbuild-publish"]
    },
    "upload-packages": {
      "dependsOn": ["build", "^upload-packages"]
    }
  }
}